<section class="clearfix bg-dark taskSection">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">

                <form id="editJob" method="POST" action="/:jobID/edit?_method=PUT">

                    <div class="dashboardBoxBg mb30">
                        <div class="profileIntro paraMargin">
                            <h3>Edit Task and Add Photo</h3>
                            <p>Upload a image to show the project you want the community to bid on.</p>
                            <div class="row">
                                <div class="form-group col-xs-12">
                                    <div class="imageUploader text-center">
                                        <div class="file-upload">
                                            <div class="upload-area">
                                                <input type="file" name="img[]" class="file">
                                                <button class="browse" type="button">Click or Drag images here</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6 col-xs-12">
                                    <label for="jobTitle">Task Title</label>
                                    <input class="form-control" id="taskTitle" type="text" name="jobTitle" value="{{title}}" />
                                </div>
                                <div class="form-group col-sm-6 col-xs-12">
                                    <label for="taskCategory">Category</label>
                                    <div class="contactSelect">
                                      <select name="taskCategory" id="guiest_id9" class="select-drop">
                                        <option value="1">Construction</option>
                                        <option value="2">Indoor</option>
                                        <option value="3">Landscaping</option>
                                        <option value="4">Outdoor</option>
                                        <option value="5">Renovation</option>
                                      </select>
                                </div>
                                <div class="form-group col-xs-12">
                                    <label for="jobDescription">Describe the Task</label>
                                    <textarea class="form-control" rows="3" name="jobDescription" value="{{description}}"></textarea>
                                </div>
                                <div class="form-group col-xs-12">
                                    <label for="taskAddress">Task address</label>
                                    <input class="form-control" id="taskZipCode" type="text" name="taskAddress" value="{{location}}" />
                                </div>
                                <div class="form-group col-xs-12">
                                    <label for="duration">Bid Length</label>
                                    <input class="integer form-control" type="integer" name="duration" value="{{duration}}" id="addPrice" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-footer text-center">
                        <button type="submit" class="btn-submit">Update</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>