<section class="clearfix bg-dark taskSection">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
          <form id="createJob" name="createJob" method="post" action="/jobs">
          <div class="dashboardPageTitle text-center">
            <h2></h2>
          </div>
          <div class="dashboardBoxBg mb30">
            <div class="profileIntro paraMargin">
              <h3>Make a Task and Add a Photo</h3>
              <p>Upload an image of your project that you want the community to bid on.</p>
              <div class="row">
                <div class="form-group col-xs-12">
                  <div class="imageUploader text-center">
                    <div class="file-upload">
                      <div class="upload-area">
                        <input type="file" name="img[]" class="file">
                        <button class="browse" type="button">Click or Drag images here</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="form-group col-sm-6 col-xs-12">
                  <label for="jobTitle">Task Title</label>
                  <input type="text" class="form-control" id="taskTitle" name="jobTitle" placeholder="Task Title">
                </div>
                <div class="form-group col-sm-6 col-xs-12">
                  <label for="taskCategory">Category</label>
                  <div class="contactSelect">
                    <select name="guiest_id9" id="guiest_id9" class="select-drop">
                      <option value="0">All Categories</option>
                      <option value="1">Outdoor</option>
                      <option value="2">Indoor</option>
                      <option value="3">Cleaning</option>
                      <option value="4">Car</option>
                      <option value="5">Repair</option>
                      <option value="6">Moving</option>
                      <option value="7">General</option>
                    </select>
                  </div>
                </div>
                <div class="form-group col-xs-12">
                  <label for="jobDescription">Describe your Task</label>
                  <textarea class="form-control" rows="3" name="jobDescription" placeholder="Describe the Task"></textarea>
                </div>
                <div class="form-group col-xs-12">
                  <label for="taskAddress">Task Zip Code</label>
                  <input type="text" class="form-control" id="taskZipCode" placeholder="Task Zip code">
                </div>
                <div class="form-group col-xs-12">
                  <label for="addPrice">How much do you think it will cost?</label>
                  <input type="text" class="form-control" id="addPrice" placeholder="Add Task starting bid price.">
                </div>
                <div class="form-group col-xs-12">
                  <label for="jobDuration">How long should the bid last?</label>
                  <input type="text" class="form-control" name="jobDuration" id="addPrice" placeholder="Add how long the task is open for bids.">
                </div>
              </div>
            </div>
          </div>
          <div class="form-footer text-center">
            <button type="submit" class="btn-submit">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

